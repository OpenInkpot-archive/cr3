<?xml version="1.0" encoding="utf-8"?>
<!--
   Option item layout for CR3 options dialog
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tts_toolbar_body"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="true"
    >

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/tts_toolbar_buttons"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:baselineAligned="true"
	    >
	
	    <ImageButton android:id="@+id/tts_play_pause"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@android:drawable/ic_media_play"
	        android:layout_marginTop="2dip"
	        android:layout_marginBottom="2dip"
	        android:layout_marginLeft="1dip"
	        android:layout_marginRight="1dip"
	        />
	    <ImageButton android:id="@+id/tts_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="2dip"
	        android:layout_marginBottom="2dip"
	        android:layout_marginLeft="1dip"
	        android:layout_marginRight="1dip"
	        android:src="@android:drawable/ic_media_rew"
	        />
	    <ImageButton android:id="@+id/tts_forward"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="2dip"
	        android:layout_marginBottom="2dip"
	        android:layout_marginLeft="1dip"
	        android:layout_marginRight="1dip"
	        android:src="@android:drawable/ic_media_ff"
	        />
	    <ImageButton android:id="@+id/tts_stop"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="2dip"
	        android:layout_marginBottom="2dip"
	        android:layout_marginLeft="1dip"
	        android:layout_marginRight="1dip"
	        android:src="@android:drawable/ic_media_next"
	        />
	</LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tts_toolbar_sliders"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        >
        <TextView android:id="@+id/tts_lbl_volume" android:layout_height="wrap_content" android:layout_width="0dip" android:layout_weight="1"
            android:text="Volume"
            android:layout_marginTop="2dip"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
        />
        <TextView android:id="@+id/tts_lbl_speed" android:layout_height="wrap_content" android:layout_width="0dip" android:layout_weight="1"
            android:text="Speed"
            android:layout_marginTop="2dip"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
        />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tts_toolbar_sliders"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        >
        <SeekBar android:id="@+id/tts_sb_volume" android:layout_height="wrap_content" android:layout_width="0dip" android:layout_weight="1"
            android:layout_marginTop="2dip"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
        />
        <SeekBar android:id="@+id/tts_sb_speed" android:layout_height="wrap_content" android:layout_width="0dip" android:layout_weight="1"
            android:layout_marginTop="2dip"
            android:layout_marginBottom="2dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
        />
    </LinearLayout>
</LinearLayout>
